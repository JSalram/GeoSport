{% extends 'base.html.twig' %}

{% block title %}Recuperar contraseña{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger m-2" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="container my-4">
        <h2 class="text-center">Recuperar contraseña</h2>

        <div class="row justify-content-center">
            <div class="col-md-6 p-5 my-4 border shadow">

                <p class="p-3 bg-info rounded">Introduce tu correo electrónico y te enviaremos un email para poder recuperar tu
                    contraseña.</p>

                {{ form_start(requestForm) }}
                {{ form_row(requestForm.email, {'label': 'Correo electrónico'}) }}

                <button class="btn btn-primary mt-3">Enviar solicitud</button>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>

{% endblock %}