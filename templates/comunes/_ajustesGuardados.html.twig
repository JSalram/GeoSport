{% for message in app.flashes('ajustesGuardados') %}
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 5">
        <div class="toast align-items-center fw-bold bg-{{ message }} border-0" role="alert" aria-live="assertive"
             aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body" style="color: white">
                    {% if message == 'success' %}
                        Ajustes guardados con Ã©xito.
                    {% else %}
                        El formulario contiene errores.
                    {% endif %}
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
                        aria-label="Close"></button>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('.toast').toast('show');
        })
    </script>
{% endfor %}