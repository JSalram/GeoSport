<div class="tab-pane fade {% if paneDeporte %}active show{% endif %}" id="crud-deportes" role="tabpanel">
    <div class="card-body pb-3">

        <h5>Deportes</h5>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripci√≥n</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for deporte in deportes %}
                <tr>
                    <td>{{ deporte.nombre }}</td>
                    <td>{{ deporte.descripcion }}</td>
                    <td>
                        <a href="{{ path('deporte_edit', {'id': deporte.id}) }}">
